{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "unused-imports", "no-floating-promise"],
    "rules": {
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "react-hooks/exhaustive-deps": "off",
        "@typescript-eslint/ban-ts-comment": "off",
        "prefer-const": "off",
        "@typescript-eslint/no-var-requires": "off",
        "no-unexpected-multiline": "off",
        "no-constant-condition": "off",
        "no-empty": "off",
        "@typescript-eslint/no-extra-non-null-assertion": "off",
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/no-non-null-asserted-optional-chain": "off",
        "no-extra-semi": "off",
        "no-prototype-builtins": "off",
        "no-case-declarations": "off",
        "no-undef": "off",
        "@typescript-eslint/no-this-alias": "off",
        "no-var": "off",
        "no-use-before-define": "error",
        "unused-imports/no-unused-vars": "off",
        "unused-imports/no-unused-imports": "error",
        //this should use the @typescript-eslint/no-floating-promises rule instead, but typescript eslint is causing heap overflow
        "no-floating-promise/no-floating-promise": "error"
    },
    "ignorePatterns": ["node_modules", "dist", "bin", ".config."]
}
